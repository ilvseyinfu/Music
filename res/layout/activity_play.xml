<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/play_textView_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="播放列表"
            android:textColor="#ff4500"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="---当前正在播放歌曲"
            android:textColor="#000080"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/play_textView_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:background="#b0e0e6"
        android:text="隐藏歌词" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/play_textView_lyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </ScrollView>
      <Button
            android:id="@+id/play_button_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:text=""
            android:textColor="#ff4500" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp" >

        <Button
            android:id="@+id/play_button_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p6"
            android:text="play"
            android:textColor="#ff4500" />

        <Button
            android:id="@+id/play_button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/p6"
            android:text="stop"
            android:textColor="#ff4500" />

        <Button
            android:id="@+id/play_button_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/p6"
            android:text="pause"
            android:textColor="#ff4500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/play_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/play_radio_xunhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="循环播放"
                android:textColor="#20b2aa" />

            <RadioButton
                android:id="@+id/play_radio_suiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随机播放"
                android:textColor="#7cfc00" />

            <RadioButton
                android:id="@+id/play_radio_liebiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="列表循环"
                android:textColor="#ff4500" />
        </RadioGroup>

        <Button
            android:id="@+id/play_button_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/p7" />

        <TextView
            android:id="@+id/play_textView_haha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="长按我试试"
            android:textColor="#00bfff" />
    </LinearLayout>

</LinearLayout>